{
  "name": "cordova-plugin-secure-logger",
  "version": "0.2.0",
  "description": "cordova plugin for securely writing logs to local app cache",
  "main": "./www/cordova-plugin-secure-logger.js",
  "types": "./www/cordova-plugin-secure-logger.d.ts",
  "scripts": {
    "build": "rm -rf ./www/* && tsc",
    "docs": "typedoc ./src/ts/cordova-plugin-secure-logger.ts --out ./docs",
    "docs:open": "open ./docs/index.html",
    "version:sync": "node ./scripts/version-sync.js",
    "version": "run-s build docs version:sync",
    "version:patch": "npm version patch",
    "version:publish": "node ./scripts/version-publish.js",
    "bump": "run-s version:patch version:publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jospete/cordova-plugin-secure-logger.git"
  },
  "keywords": [
    "cordova",
    "capacitor",
    "plugin",
    "secure",
    "logger",
    "crypto",
    "encrypted",
    "logs",
    "storage",
    "log",
    "to",
    "file",
    "logtofile"
  ],
  "author": "Josh Noel <obsidize@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jospete/cordova-plugin-secure-logger/issues"
  },
  "homepage": "https://github.com/jospete/cordova-plugin-secure-logger#readme",
  "devDependencies": {
    "@types/cordova": "11.0.2",
    "@types/node": "20.8.9",
    "npm-run-all": "4.1.5",
    "typedoc": "0.25.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@obsidize/rx-console": "^6.1.4"
  }
}
